<div class="row mt-4">
  <div class="col-md-6">
    <h2>Update Blog Post:</h2>

    <form class="form update-post-form mb-3" data-id="{{id}}">
      <div class="form-group">
        <label class="mb-3 pr-2" for="title">Title:</label>
        <input class="form-input" type="text" id="title" name="title" />
      </div>
      <div class="form-group">
        <label for="article">Blog Post:</label>
        <textarea value="{{contents}}"class="form-input" id="article" name="article"></textarea>
      </div>
      <div class="form-group mt-3">
        <button type="submit" class="btn btn-secondary">Confirm Changes</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/dashboard.js"></script>